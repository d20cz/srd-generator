@font-face {
  font-family: 'fate_core_glyphsregular';
  src: url('/fonts/fate_core_font-webfont.woff2') format('woff2'),
          url('/fonts/fate_core_font-webfont.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

.fate-font
  font-family: 'fate_core_glyphsregular'

.content
  .custom-block-card
    padding: 0.1rem 1.5rem;
    padding-bottom 1rem;
    margin: 1rem 0;
    background-color: #f3f5f7;
    border-color: #bc0300;
    border-width: 0.06rem
    border-style: dashed

  .custom-block-card-header
    font-weight: 600
    margin-bottom: -0.4rem

  .custom-block-card-dnd
    //font-family ScalySans
    box-sizing border-box
    margin-bottom 1em
    padding 5px 10px
    background-color #e0e5c1
    border-style solid
    border-width 11px
    border-image url('data:image/png;base64,') 11
    border-image-outset 9px 0
    box-shadow 1px 4px 14px #888
    z-index 15
    -webkit-column-break-inside avoid
    page-break-inside avoid
    break-inside avoid
    overflow hidden

  .custom-block-card-dnd-header
    font-weight: 600
    margin-bottom: -0.4rem

  p, li
    text-align justify

  blockquote
    margin 0 !important
    color: #666 !important

// tabulky
table td:first-of-type
  white-space: nowrap;


